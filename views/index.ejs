<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
       <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-5  w-full py-2 bg-zinc-800 rounded-md" type="text" placeholder="title goes here" name="title">
                <textarea  class="block px-5  w-full py-2 mt-2 bg-zinc-800 rounded-md" placeholder="write you task details here" name="content"></textarea>
                <input class="bg-blue-600 mt-2 px-5 px-2 rounded-md" type="submit" value="create task">
            </form>
        </div>
        <div class="tasks p-10 flex flex-wrap">
        <%if(files.length>0){%>
           <% files.forEach(function(val){%>
            <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800 ml-5">
                <h1 class="text-white text-3xl tracking-tighter"><%=val%></h1>
                <a class="text-blue-600 inline block mt-3" href="/file/<%= val %>">Read more</a>
                <a href="/edit/<%=val%>" class="ml-20 text-blue-500">Edit filename</a>
            </div>
                                       
            <%})%>
        <%}else{%>
            <h2 class="bg-zinc-600">No task yet</h2>
        <%}%>           
        </div>
       </div>
    
</body>
</html>